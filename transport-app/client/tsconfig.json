{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["esnext", "dom", "dom.iterable", "es2017"],
    "jsx": "preserve",
    "noEmit": true,
    "downlevelIteration": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@theme": ["src/theme"],
      "@client": ["src/client.ts"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@hooks": ["src/hooks"],
      "@utils/*": ["src/utils/*"],
      "@types": ["src/types"],
      "@actions": ["src/actions"],
      "@/*": ["src/*"]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
